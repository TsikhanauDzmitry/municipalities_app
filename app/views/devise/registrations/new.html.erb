<div class="d-flex align-items-center justify-content-center">
  <div class="card shadow">
    <div class="card-body">
      <h3 class="text-center mb-4">Sign Up</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-group" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="row">
          <div class="col-md-6">
            <legend>Profile</legend>

            <div class="mb-3">
              <%= f.label :email, "Email", class: "visually-hidden" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
            </div>

            <%= f.fields_for :profile do |pf| %>
              <div class="mb-3">
                <%= pf.label :first_name, "First Name", class: "visually-hidden" %>
                <%= pf.text_field :first_name, class: "form-control", placeholder: "First name" %>
              </div>
              <div class="mb-3">
                <%= pf.label :last_name, "Last Name", class: "visually-hidden" %>
                <%= pf.text_field :last_name, class: "form-control", placeholder: "Last name" %>
              </div>
            <% end %>

            <legend>Password</legend>
            <div class="mb-3">
              <%= f.label :password, "Password", class: "visually-hidden" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirm Password", class: "visually-hidden" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm your password" %>
            </div>
          </div>

          <div class="col-md-6">
            <fieldset class="mb-3">
              <legend>Address</legend>
              <%= f.fields_for :address do |af| %>
                <div class="mb-3">
                  <%= af.label :country, "Country", class: "visually-hidden" %>
                  <%= af.text_field :country, class: "form-control", placeholder: "Country" %>
                </div>
                <div class="mb-3">
                  <%= af.label :city, "City", class: "visually-hidden" %>
                  <%= af.text_field :city, class: "form-control", placeholder: "City" %>
                </div>
                <div class="mb-3">
                  <%= af.label :street, "Street", class: "visually-hidden" %>
                  <%= af.text_field :street, class: "form-control", placeholder: "Street" %>
                </div>
                <div class="mb-3">
                  <%= af.label :zip_code, "Zip Code", class: "visually-hidden" %>
                  <%= af.text_field :zip_code, class: "form-control", placeholder: "Zip code" %>
                </div>
              <% end %>
            </fieldset>
          </div>
        </div>

        <div class="d-grid">
          <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
